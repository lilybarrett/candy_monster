<div class="row form">
  <div class="small-6 small-centered columns">
    <%= form_for (@candy) do |f| %>
      <%= f.label :name, "Name" %>
      <%= f.text_field :name %>

      <%= f.label :description, "Description" %>
      <%= f.text_field :description %>

      <%= f.label :image_url, "Image URL" %>
      <%= f.text_field :image_url %>

      <%= f.submit "Add Candy!", class: "button round" %>
    <% end %>
  </div>
</div>

<div class="candy-list row" id="app">
</div>
